@model DiscountManagement.Application.Contract.CustomerDiscount.EditCustomerDiscount
@{

}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
    <h4 class="modal-title">ویرایش تخفیف مشتری</h4>
</div>
<form asp-page="./Index" asp-page-handler="Edit" method="post" data-ajax="true" data-callback="" data-action="Refresh">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <lable asp-for="ProductId" class="control-lable">انتخاب محصول</lable>
                    <select class="form-control" asp-for="ProductId"
                        asp-items='new SelectList(Model.Products,"Id","Name")'>
                        <option value="0">انتخاب محصول</option>
                    </select>
                    <span asp-validation-for="ProductId" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <lable asp-for="Name" class="control-lable">درصد تخفیف</lable>
                    <input type="text" class="form-control" asp-for="DiscountRate">
                    <span asp-validation-for="DiscountRate" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <lable asp-for="StartDate" class="control-lable">تاریخ شروع</lable>
                    <input type="text" class="form-control PersianDateInput" asp-for="StartDate">
                    <span asp-validation-for="StartDate" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <lable asp-for="EndDate" class="control-lable">تاریخ اتمام</lable>
                    <input type="text" class="form-control PersianDateInput" asp-for="EndDate">
                    <span asp-validation-for="EndDate" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group m-0">
                    <lable asp-for="Reason" class="control-lable">علت</lable>
                    <textarea asp-for="Reason" class="form-control"
                        style="overflow: hidden;word-wrap: break-word;resize: horizontal;height: 104px;"></textarea>
                    <span asp-validation-for="Reason" class="error"></span>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id">
    </div>
    <div class="modal-footer">
        <button class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>